<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Date Game</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f2f2f2;
        }

        .container {
            text-align: center;
        }

        .question {
            font-size: 24px;
            margin-bottom: 20px;
        }

        .btn {
            padding: 10px 20px;
            margin: 10px;
            font-size: 18px;
            cursor: pointer;
            border-radius: 5px;
            border: none;
            color: white;
        }

        #yesBtn {
            background-color: #28a745;
        }

        #noBtn {
            background-color: #dc3545;
            position: absolute;
        }

        .hidden {
            display: none;
        }

        #result {
            margin-top: 30px;
            font-size: 22px;
            color: #ff1493;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="question">Would you like to go out on a date with me?</div>
        <button id="yesBtn" class="btn">Yes</button>
        <button id="noBtn" class="btn">No</button>
        <div id="result" class="hidden">❤️ Let's meet up as soon as possible, message me! ❤️</div>
    </div>

    <script>
        const noBtn = document.getElementById('noBtn');
        const yesBtn = document.getElementById('yesBtn');
        const result = document.getElementById('result');
        
        // Change the "No" button position randomly on click
        noBtn.addEventListener('mouseover', () => {
            const x = Math.floor(Math.random() * (window.innerWidth - noBtn.clientWidth));
            const y = Math.floor(Math.random() * (window.innerHeight - noBtn.clientHeight));
            noBtn.style.left = `${x}px`;
            noBtn.style.top = `${y}px`;
        });

        // Show the message when the "Yes" button is clicked
        yesBtn.addEventListener('click', () => {
            result.classList.remove('hidden');
        });
    </script>
</body>
</html>
